{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "*": ["node_modules/*"], // Default node resolution
      "components/*": ["components/*"], // Alias for components folder
      "pages/*": ["components/*"], // Alias for components folder
      "@assets/*": ["assets/*"]
    },
    "moduleResolution": "node" // Resolves modules like Node.js
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
